<network-security-config>
    <!-- Allow cleartext traffic for your API domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">resume-writer-api.onrender.com</domain>
        <domain includeSubdomains="true">216.24.57.7</domain>
        <domain includeSubdomains="true">216.24.57.251</domain>
    </domain-config>
    
    <!-- Base config that trusts system certificates only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
