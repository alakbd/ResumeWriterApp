<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume Generator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#333333" />

        <!-- Connection Status -->
        <LinearLayout
            android:id="@+id/layoutConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#e3f2fd"
            android:visibility="visible"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progressConnection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Testing connection to API..."
                android:textSize="14sp"
                android:textColor="#1976d2" />

            <Button
                android:id="@+id/btnRetryConnection"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Retry"
                android:textSize="12sp"
                android:background="@color/secondary"
                android:textColor="#1976d2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Debug Auth Button -->
        <Button
            android:id="@+id/btnDebugAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Auth"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:onClick="onDebugAuthClicked" />

        <!-- Debug Output TextView -->
        <TextView
            android:id="@+id/debugTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="8dp"
            android:scrollbars="vertical" />

        <!-- Credit Info -->
        <TextView
            android:id="@+id/tvCreditInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credits: Loading..."
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#e8f5e8"
            android:textColor="#2e7d32"
            android:layout_marginBottom="16dp" />

        <!-- File Upload Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Files (Optional)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Resume File Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resume File"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/creditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits: ${credits}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnSelectResume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Resume File"
                    android:background="@color/secondary"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnClearResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:background="@color/button_clear"
                    android:textColor="@color/button_clear_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvResumeFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Job Description File Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Description File"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnSelectJobDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Job Description"
                    android:background="@color/secondary"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnClearJobDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:background="@color/button_clear"
                    android:textColor="@color/button_clear_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvJobDescFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Add the rest of your Resume Text inputs, Generate button, and Generated Resume TextViews below -->
        <!-- ... -->
        
    </LinearLayout>

</ScrollView>
