<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fadeScrollbars="true"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header_card"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€"
                android:textSize="32sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional CV Generator"
                android:textColor="@color/on_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create tailored resumes for your dream job"
                android:textColor="@color/admin_primary_light"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Connection Status Card -->
        <LinearLayout
            android:id="@+id/layoutConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_status_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressConnection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="@color/modern_info" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Testing connection to API..."
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/btnRetryConnection"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Update Connection"
                android:textSize="12sp"
                android:textColor="@color/modern_info"
                android:background="@drawable/bg_outline_button"
                app:cornerRadius="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Credits Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_credits_info"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’°"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/creditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credits: Loading..."
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 credit per CV"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_credit_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- File Upload Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Ž Upload Files"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Resume File Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_upload_item"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Resume File [DOCX, PDF]"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnSelectResume"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Select Resume"
                        android:textColor="@color/on_primary"
                        android:backgroundTint="@color/modern_primary"
                        app:cornerRadius="12dp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnClearResume"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Clear"
                        android:textColor="@color/modern_danger"
                        android:background="@drawable/bg_outline_button"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvResumeFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Job Description File Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_upload_item"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¼ Job Description File [DOCX, PDF]"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnSelectJobDesc"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Select Job Description"
                        android:textColor="@color/on_primary"
                        android:backgroundTint="@color/modern_primary"
                        app:cornerRadius="12dp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnClearJobDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Clear"
                        android:textColor="@color/modern_danger"
                        android:background="@drawable/bg_outline_button"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvJobDescFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tone Selection Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ­ Select Tone"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <AutoCompleteTextView
                    android:id="@+id/spinnerTone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Professional"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Text Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Or Enter Text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Resume Text Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Resume Text"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etResumeText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Paste your current resume text here..."
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:background="@drawable/bg_edittext"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Job Description Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Description"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etJobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Paste the job description here..."
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:background="@drawable/bg_edittext"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Generate Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_generate_section"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressGenerate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:indeterminateTint="@color/on_primary" />

            <Button
                android:id="@+id/btnGenerateResume"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœ¨ Generate Professional CV (1 Credit)"
                android:textColor="@color/on_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/modern_success"
                app:cornerRadius="16dp"
                android:padding="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI-powered resume tailoring"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Generated Resume Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Generated Resume"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_resume_preview"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvGeneratedResume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Your AI-generated resume will appear here...\n\nUpload files or enter text above and click Generate Resume."
                    android:textIsSelectable="true"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <!-- Download Buttons -->
            <LinearLayout
                android:id="@+id/layoutDownloadButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnDownloadDocx"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ“ DOCX"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/modern_info"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnDownloadPdf"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ“„ PDF"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/modern_primary"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Success Message -->
        <TextView
            android:id="@+id/tvCreditInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bg_success_message"
            android:textColor="@color/modern_success"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="â† Back to Dashboard"
            android:textColor="@color/modern_primary"
            android:background="@drawable/bg_outline_button"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>
