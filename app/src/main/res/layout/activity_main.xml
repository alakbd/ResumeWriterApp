<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:fadeScrollbars="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Welcome Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_welcome_card"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‹"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_welcome_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome back!"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Credits Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_credits_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’°"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your CV Credits"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_available_credits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Credits: 0"
                    android:textColor="@color/modern_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/bg_credit_count" />

            </LinearLayout>

            <!-- Main Action Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ Create Your CV"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_generate_cv"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ¨ Generate Tailored RÃ©sumÃ©"
                    android:textColor="@color/on_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/modern_success"
                    app:cornerRadius="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create professional CVs instantly"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Purchase Credits Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Ž Get More Credits"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_buy_3_cv"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="3 CV Credits - â‚¬5"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_primary"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_buy_8_cv"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="8 CV Credits - â‚¬10"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_primary"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best value: 8 credits package"
                    android:textColor="@color/modern_success"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Samples & Preview Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Samples &amp; Preview"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_view_sample_cv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="View Sample CV"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_info"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_view_sample_job"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="View Sample Job Description"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_info"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_generate_sample_resume"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Generate Sample Resume"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_warning"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <!-- Admin Section Card -->
            <LinearLayout
                android:id="@+id/admin_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_admin_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ ADMIN ACCESS"
                    android:textColor="@color/modern_danger"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_admin_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Administrator Mode Active"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_admin_access"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="âš™ï¸ Open Admin Panel"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/modern_danger"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar - IMPROVED -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg_bottom_bar"
        android:weightSum="3">

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ”„ Refresh"
            android:textColor="@color/modern_primary"
            android:background="@drawable/bg_outline_button"
            app:cornerRadius="12dp" />

        <!-- Version Info -->
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="v1.0"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸšª Logout"
            android:textColor="@color/on_primary"
            android:backgroundTint="@color/modern_danger"
            app:cornerRadius="12dp" />

    </LinearLayout>

</LinearLayout>
