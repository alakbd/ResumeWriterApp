<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Welcome Message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_welcome_message"
                android:text="Welcome user@example.com"
                android:textColor="#2c3e50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="#e8f5e8"
                android:drawablePadding="8dp"/>

            <!-- Available Credits -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_available_credits"
                style="@style/TitleText"
                android:text="Available CV Credits: 0"
                android:layout_marginBottom="16dp"/>

           

            <!-- Generate CV Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_generate_cv"
                style="@style/PrimaryButton"
                android:text="âœ¨ Generate Tailored RÃ©sumÃ©"
                android:layout_marginBottom="32dp"/>

            <!-- Purchase Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_purchase_title"
                style="@style/SubTitleText"
                android:text="Purchase More Credits:"
                android:layout_marginBottom="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_buy_3_cv"
                style="@style/SecondaryButton"
                android:text="3 CV Credits - â‚¬5"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_buy_8_cv"
                style="@style/SecondaryButton"
                android:text="8 CV Credits - â‚¬10"
                android:layout_marginBottom="48dp"/>

            <!-- Sample Preview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preview Sample RÃ©sumÃ© &amp; Job Description"
                style="@style/SubTitleText"
                android:layout_marginBottom="24dp"
                android:gravity="center"/>

            <!-- Added extra space (1 inch â‰ˆ 48dp) before sample buttons -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_view_sample_cv"
                android:text="View Sample CV"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_view_sample_job"
                android:text="View Sample Job Description"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_generate_sample_resume"
                android:text="Generate Sample Resume"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="32dp"/>

            <!-- Admin Section - More prominent placement -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_admin_indicator"
                android:text="ðŸ›¡ï¸ ADMIN MODE ðŸ›¡ï¸"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFF0F0"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_admin_access"
                android:text="âš™ï¸ Admin Panel Access"
                android:backgroundTint="#FF6B35"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Horizontal Bar - FIXED AT BOTTOM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#f5f5f5"
        android:weightSum="3">

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refresh"
            android:layout_marginEnd="8dp"/>

        <!-- Version Info - CENTERED -->
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="v1.0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
