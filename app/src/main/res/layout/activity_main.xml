<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Available Credits -->
        <TextView
            style="@style/TitleText"
            android:id="@+id/tv_available_credits"
            android:text="Available CV Credits: 0"
            android:layout_marginBottom="16dp"/>

        <!-- Credit Stats -->
        <TextView
            style="@style/SubTitleText"
            android:id="@+id/tv_credit_stats"
            android:text="Used: 0 | Total Earned: 0"
            android:layout_marginBottom="32dp"/>

        <!-- Generate CV Button -->
        <Button
            style="@style/PrimaryButton"
            android:id="@+id/btn_generate_cv"
            android:text="Generate CV (1 Credit)"
            android:layout_marginBottom="32dp"/>

        <!-- Purchase Section -->
        <TextView
            style="@style/SubTitleText"
            android:text="Purchase More Credits:"
            android:layout_marginBottom="16dp"/>

        <Button
            style="@style/SecondaryButton"
            android:id="@+id/btn_buy_3_cv"
            android:text="3 CV Credits - €5"
            android:layout_marginBottom="12dp"/>

        <Button
            style="@style/SecondaryButton"
            android:id="@+id/btn_buy_8_cv"
            android:text="8 CV Credits - €10"
            android:layout_marginBottom="32dp"/>

        <!-- Hidden Admin -->
        <TextView
            android:id="@+id/tv_version"
            android:text="v1.0"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <Button
            style="@style/PrimaryButton"
            android:id="@+id/btn_admin_access"
            android:text="Admin Access"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv_admin_indicator"
            android:text="ADMIN MODE"
            android:textColor="@color/admin_red"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
