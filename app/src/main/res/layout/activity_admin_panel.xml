<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Admin Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- User Selection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select User:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/sp_user_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Manual Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_manual_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Or enter email manually"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_load_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load" />
        </LinearLayout>

        <!-- User Info Display -->
        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User: Not selected"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_available_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available: 0"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_used_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Used: 0"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_total_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Earned: 0"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Block / Unblock User -->
        <Button
            android:id="@+id/btn_block_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block User"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF" />

        <!-- Admin Controls Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Management:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- New Credit Buttons in Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_admin_add_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="+3" />

            <Button
                android:id="@+id/btn_admin_add_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="+5" />

            <Button
                android:id="@+id/btn_admin_add_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="+8" />

            <Button
                android:id="@+id/btn_admin_add_20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="+20" />
        </LinearLayout>

        <!-- Reset Credits Button -->
        <Button
            android:id="@+id/btn_admin_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Credits to 0"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCheckMultiAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Related Accounts"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_margin="4dp" />

        <!-- User Stats Button -->
        <Button
            android:id="@+id/btn_admin_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show User Statistics"
            android:layout_marginBottom="8dp" />

        <!-- Admin Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_user_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users: Loading..."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:background="#e0f7fa" />

        <TextView
            android:id="@+id/tv_credit_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CV Stats: Loading..."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:background="#fff3e0" />

        <TextView
            android:id="@+id/tv_cv_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total CVs: Loading..."
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:background="#f3e5f5" />

        <!-- Refresh Users Button -->
        <Button
            android:id="@+id/btn_refresh_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Users"
            android:layout_marginBottom="16dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_admin_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout Admin"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
