<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fadeScrollbars="true"
    android:background="@color/background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‘ Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- Stats Section - Improved Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <!-- Users Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_stats_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvUserStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users: Loading..."
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Credits Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_stats_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’°"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvCreditStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credits: Loading..."
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- CV Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bg_stats_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvCvStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVs: Loading..."
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Selection - Improved -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Select User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spUserSelector"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <AutoCompleteTextView
                    android:id="@+id/etManualEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Search by email..."
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnRefreshUsers"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ”„ Refresh Users"
                android:textColor="@color/btn_text_light"
                android:backgroundTint="@color/modern_info"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Selected User Info - Improved -->
        <LinearLayout
            android:id="@+id/selectedUserSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User: Not selected"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvAvailableCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available: 0"
                        android:textColor="@color/modern_success"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvUsedCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Used: 0"
                        android:textColor="@color/modern_warning"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: 0"
                        android:textColor="@color/modern_info"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Credit Operations - IMPROVED BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Credit Operations"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- First Row of Credit Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnAdminAdd3"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="+3 Credits"
                    android:textColor="@color/btn_text_light"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_success"
                    app:cornerRadius="12dp" />

                <Button
                    android:id="@+id/btnAdminAdd5"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="+5 Credits"
                    android:textColor="@color/btn_text_light"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_success"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <!-- Second Row of Credit Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnAdminAdd8"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="+8 Credits"
                    android:textColor="@color/btn_text_light"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_success"
                    app:cornerRadius="12dp" />

                <Button
                    android:id="@+id/btnAdminAdd20"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="+20 Credits"
                    android:textColor="@color/btn_text_light"
                    android:textSize="14sp"
                    android:backgroundTint="@color/modern_success"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <!-- Reset Button -->
            <Button
                android:id="@+id/btnAdminReset"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸ”„ Reset to Zero"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_warning"
                app:cornerRadius="12dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- User Management - IMPROVED BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ User Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnBlockUser"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸš« Block User"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_danger"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnRefreshVerification"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="âœ… Refresh Verification"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_info"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCheckMultiAccounts"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸ” Check Multi-Accounts"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_warning"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Analytics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ Analytics"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAdminStats"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸ“Š User Statistics"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_primary"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnTopCVGenerators"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸ† Top CV Generators"
                android:textColor="@color/btn_text_light"
                android:textSize="14sp"
                android:backgroundTint="@color/modern_info"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnAdminLogout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="ðŸšª Logout Admin"
            android:textColor="@color/btn_text_light"
            android:textSize="14sp"
            android:backgroundTint="@color/modern_danger"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>
