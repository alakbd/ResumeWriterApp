<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Available credits -->
    <TextView
        android:id="@+id/tv_available_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available CV Credits: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Credit stats -->
    <TextView
        android:id="@+id/tv_credit_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Used: 0 | Total Earned: 0"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Generate CV button -->
    <Button
        android:id="@+id/btn_generate_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate CV (1 Credit)"
        android:textSize="18sp"
        android:layout_marginBottom="32dp" />

    <!-- Purchase credits section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase More Credits:"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_buy_3_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 CV Credits - â‚¬5"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_buy_8_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8 CV Credits - â‚¬10"
        android:layout_marginBottom="32dp" />

    <!-- ðŸ”’ Hidden admin features -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_admin_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Access"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_admin_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN MODE"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

</LinearLayout>

